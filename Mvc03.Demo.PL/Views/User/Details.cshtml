@model UserViewModel
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="my-4">
    <h1>Department Details</h1>
    <form class="my-5">
        <div class="mb-3">
            <label asp-for="FirstName" class="form-label"></label>
            <input asp-for="FirstName" class="form-control" readonly>
        </div>
        <div class="mb-3">
            <label asp-for="LastName" class="form-label"></label>
            <input asp-for="LastName" class="form-control" readonly>
        </div>
        <div class="mb-3">
            <label asp-for="Email" class="form-label"></label>
            <input asp-for="Email" class="form-control" readonly>
        </div>
        <div class="d-flex gap-4 my-4">
            <a asp-controller="User" asp-action="Update" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
            <a asp-controller="User" asp-action="Index" class="btn btn-outline-dark">Back To List </a>
        </div>


    </form>
</div>
