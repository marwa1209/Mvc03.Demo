 @model EmployeeViewModel

@{
    ViewData["Title"] = "Create";
}

<div class="my-4">
    <h1>Add New Employee</h1>
    <form class="my-5" asp-action="Create" enctype="multipart/form-data">
        <partial name="PartialViews/CreateUpdateEmployeePartialView" model="Model" />
        <div class="d-flex gap-4 my-4">
            <input type="submit" value="Create" class="btn btn-primary" />
            <a asp-controller="Employees" asp-action="Index" class="btn btn-outline-dark">Back To List </a>
        </div>
    </form>
</div>
@section Scripts
{
        <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
