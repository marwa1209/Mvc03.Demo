@model List<UserRoleViewModel>
 
@{
    ViewData["Title"] = "AddOrRemoveUser";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var RoleId = ViewData["RoleId"] as string;
}

<form class="my-5" asp-action="AddOrRemoveUser" asp-route-RoleId="@RoleId">
    @for (int i = 0; i < Model.Count; i++)
    {
        <div class="mb-3 form-check">
            <input asp-for="@Model[i].IsSelected" class="form-check-input">
            <label asp-for="@Model[i].IsSelected" class="form-check-label">@Model[i].UserName</label>
        </div>
        <input asp-for="@Model[i].UserId" hidden>
        <input asp-for="@Model[i].UserName" hidden>

    }
    <div class="d-flex gap-4 my-4">
        <input type="submit" value="Update" class="btn btn-success" />
        <a asp-controller="Role" asp-route-id="@RoleId" asp-action="Update" class="btn btn-danger">Cancel </a>
    </div>
</form>