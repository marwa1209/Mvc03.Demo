@model Department
@{
    ViewData["Title"] = "Update";
}

<div class="my-4">
    <h1>Update @Model.Name Department</h1>
    <form class="my-5" asp-action="Update">
        <div asp-validation-summary="All"></div>
        <div class="mb-3">
            <label asp-for="Code" class="form-label"></label>
            <input asp-for="Code" class="form-control">
            <span asp-validation-for="Code" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control">
            <span asp-validation-for="Name" class="text-danger"></span>

        </div>
        <div class="mb-3">
            <label asp-for="DateOfCreation" class="form-label"></label>
            <input asp-for="DateOfCreation" class="form-control">

        </div>
        <div class="d-flex gap-4 my-4">
            <input type="submit" value="Save" class="btn btn-primary" />
            <a asp-controller="Departments" asp-action="Index" class="btn btn-outline-dark">Back To List </a>
        </div>


    </form>
</div>
