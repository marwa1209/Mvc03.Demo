@model Department

@{
    ViewData["Title"] = "Details";
}

<div class="my-4">
    <h1>Department Details</h1>
    <form class="my-5" >
        <div class="mb-3">
            <label asp-for="Code" class="form-label"></label>
            <input asp-for="Code" class="form-control" readonly>
        </div>
        <div class="mb-3">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control" readonly>
        </div>
        <div class="mb-3">
            <label asp-for="DateOfCreation" class="form-label"></label>
            <input asp-for="DateOfCreation" class="form-control" readonly>

        </div>
        <div class="d-flex gap-4 my-4">
            <a asp-controller="Departments" asp-action="Update" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
            <a asp-controller="Departments" asp-action="Index" class="btn btn-outline-dark">Back To List </a>
        </div>


    </form>
</div>


